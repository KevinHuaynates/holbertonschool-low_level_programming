CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
	NAME = school
	EXECUTABLE = $(NAME)
	RM = rm -f
	TMP_FILES = *~ $(EXECUTABLE)

.PHONY: all clean oclean fclean re

all: $(EXECUTABLE)

$(EXECUTABLE): $(OBJ)
		$(CC) $(OBJ) -o $(EXECUTABLE)

%.o: %.c
		$(CC) -c $< -o $@

clean:
		$(RM) $(TMP_FILES)

oclean:
		$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

